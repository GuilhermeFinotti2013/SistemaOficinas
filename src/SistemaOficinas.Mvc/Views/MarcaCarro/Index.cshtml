@model IEnumerable<SistemaOficinas.Domain.Entities.MarcaCarro>

@{
    ViewData["Title"] = "Fabrícantes";
}

<vc:cabecalho titulo="Entre Rodas automotiva" subtitulo="@ViewData["Title"]"></vc:cabecalho>
<div class="row" style="margin-top: 12px;">
    <div class="col-lg-12">
        <p>
            <button class="btn btn-default create" data-toggle="tooltip" data-placement="bottom" title="Adicionar um novo CID" data-original-title="Adicionar uma nova fabrícante">
                <i class="glyphicon glyphicon-plus-sign"></i>&nbsp; Nova fabricante
            </button>
        </p>
        <div class="panel panel-primary toggle">
            <div class="panel-heading">
                <h4 class="panel-title"><i class="fa fa-magic"></i> Cadastro de Fabricantes</h4>
            </div>
        </div>
        <div class="animated fadeInRightBig">
        </div>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
